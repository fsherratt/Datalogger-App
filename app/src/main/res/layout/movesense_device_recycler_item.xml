<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="6dp">

    <TextView
        android:id="@+id/ble_device_name"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/add_device_button"
        android:text="-"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/connection_state_id"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ble_device_name"
        android:layout_alignStart="@+id/ble_device_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="-"
        android:textColor="@color/colorLight"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/rssi_text_view"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ble_device_name"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:layout_toStartOf="@+id/rssi_image_view"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/colorLight" />

    <TextView
        android:id="@+id/battery_text_view"
        android:layout_width="41dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rssi_text_view"
        android:layout_alignStart="@+id/rssi_text_view"
        android:layout_alignEnd="@+id/rssi_text_view"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="2dp"
        android:text="-"
        android:textAlignment="textEnd"
        android:textColor="@color/colorLight" />

    <ImageView
        android:id="@+id/batt_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/battery_text_view"
        android:layout_alignEnd="@+id/rssi_image_view"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-3dp"
        app:srcCompat="@drawable/ic_sync_black_24dp" />

    <ImageView
        android:id="@+id/rssi_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rssi_text_view"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="10dp"
        app:srcCompat="@drawable/ic_signal_cellular_3_bar_black_24dp" />

    <Button
        android:id="@+id/add_device_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_add_circle_outline_black_24dp"
        android:backgroundTint="@color/colorAccent" />

</RelativeLayout>